    }*/
	
	public List <BaseTableItem> getAuditItemsCollection() {
		
		List<BaseTableItem> btiList = new ArrayList<BaseTableItem>(this.auditItemsMap.values());
		Collections.sort(btiList, new Comparator<BaseTableItem>() {

	        public int compare(BaseTableItem o1, BaseTableItem o2) {
	        	
	        	int sort1=o1.getItemSort();
	        	int sort2=o2.getItemSort();
	        	
	        	if(sort1 > sort2){
	                return 1;
	            }else if(sort1 < sort2){
	                return -1; 
	            }else{
	                return 0;
	            }    
	         }
	    });

        return btiList;
    }
	
	public AFuncContext_18_03_13(){
		
		auditItemsMap.put("dateAction",new BaseTableItem("Дата и время действия", "...", "dateAction", 1));
	    auditItemsMap.put("userName",new BaseTableItem("Пользователь", "...", "userName", "tokenKnlT.acUsersKnlT.surname", 2));
	    auditItemsMap.put("isName",new BaseTableItem("ИС", "...", "isName", "actionsBssT.acIsBssT.name", "actionsBssT.acIsBssT2", 3));
		auditItemsMap.put("actName",new BaseTableItem("Действие", "...", "actName", "actionsBssT.full", 4));
		auditItemsMap.put("tokenName",new BaseTableItem("Токен", "...", "tokenName", "tokenKnlT.sign", 5));
		
	}
}
